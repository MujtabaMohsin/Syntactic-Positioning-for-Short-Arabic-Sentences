									 proclitic_mark="+"
									 token_form_base="WORD"
									 transliteration="UTF8">
						<normalization type="ALEF"/>
						<normalization type="YAA"/>
						<normalization type="DIAC"/>
						<normalization type="LEFTPAREN"/>
						<normalization type="RIGHTPAREN"/>
					</token_form_spec>
				</scheme_override>
			</scheme>
